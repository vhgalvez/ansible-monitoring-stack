# helm/grafana/values-grafana.yaml.j2

adminUser: "{{ grafana_admin_user }}"
adminPassword: "{{ grafana_admin_password }}"

persistence:
  enabled: true
  storageClassName: "{{ grafana_storage_class }}"
  accessModes:
    - ReadWriteOnce
  size: "{{ grafana_pvc_size }}"

service:
  type: ClusterIP
  port: 3000
  targetPort: 3000

ingress:
  enabled: true
  ingressClassName: traefik
  annotations:
    kubernetes.io/ingress.class: traefik
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
    traefik.ingress.kubernetes.io/router.tls.certresolver: selfsigned
    traefik.ingress.kubernetes.io/auth-type: basic
    traefik.ingress.kubernetes.io/auth-secret: "{{ grafana_secret_name }}"  # Secret creado para la autenticación básica
    traefik.ingress.kubernetes.io/auth-header-field: Authorization
  hosts:
    - "grafana.{{ domain }}"  # Asegúrate de que esto sea una cadena, no un mapa
  tls:
    - secretName: "{{ tls_secret_name }}"  # Certificado TLS para Grafana
      hosts:
        - "grafana.{{ domain }}"  # Asegúrate de que el host sea una cadena

resources:
  requests:
    cpu: 100m
    memory: 512Mi
  limits:
    cpu: 200m
    memory: 1Gi

# Variables de personalización
env:
  GF_SECURITY_ADMIN_PASSWORD: "{{ grafana_admin_password }}"
  GF_SECURITY_ADMIN_USER: "{{ grafana_admin_user }}"

# Configuración adicional de Logs
logs:
  level: "info"

prometheus:
  server:
    ingress:
      enabled: true
      ingressClassName: traefik
      annotations:
        kubernetes.io/ingress.class: "traefik"
        traefik.ingress.kubernetes.io/router.entrypoints: "websecure"
        traefik.ingress.kubernetes.io/router.tls: "true"
        traefik.ingress.kubernetes.io/router.tls.certresolver: "selfsigned"
        traefik.ingress.kubernetes.io/auth-type: "basic"
        traefik.ingress.kubernetes.io/auth-secret: "prometheus-basic-auth"
        traefik.ingress.kubernetes.io/auth-header-field: "Authorization"
      hosts:
        - "prometheus.cefaslocalserver.com"  # Asegúrate de que esta sea una cadena, no un mapa
      tls:
        - secretName: "{{ tls_secret_name }}"  # Certificado TLS para Prometheus