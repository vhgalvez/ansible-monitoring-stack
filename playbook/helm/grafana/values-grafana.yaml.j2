# helm/grafana/values-grafana.yaml.j2

adminUser: {{ grafana_admin_user }}
adminPassword: {{ grafana_admin_password }}

persistence:
  enabled: true
  storageClassName: {{ grafana_storage_class }}
  accessModes:
    - ReadWriteOnce
  size: {{ grafana_pvc_size }}

service:
  type: {{ grafana_service_type }}
  port: {{ grafana_service_port }}  # Puerto del servicio, 3000 en este caso
  targetPort: {{ grafana_container_port }}  # El puerto del contenedor de Grafana, por defecto 3000
  name: http