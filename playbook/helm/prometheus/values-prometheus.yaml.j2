# helm/prometheus/values-prometheus.yaml.j2

server:
  service:
    type: NodePort
    port: 9090
    targetPort: 9090
    nodePort: 32001

  ingress:
    enabled: false
  resources:
    requests:
      cpu: 500m
      memory: 1Gi
    limits:
      cpu: 1
      memory: 2Gi

extraScrapeConfigs:
  existingSecret: prometheus-additional-scrape-configs
  key: extraScrapeConfigs.yaml